<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="emcorp.studio.mutamtour.Fragment.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo"
            android:scaleType="fitCenter"
            android:layout_marginTop="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HOME"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv1"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/btn1"
                    android:src="@drawable/ic_home"
                    android:background="@null"
                    android:tint="@color/colorWhite"
                    android:layout_above="@id/tv1"
                    android:scaleType="fitCenter"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TENTANG"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv2"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/btn2"
                    android:src="@drawable/ic_bantuan"
                    android:tint="@color/colorWhite"
                    android:background="@null"
                    android:layout_above="@id/tv2"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BERITA"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv3"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/btn3"
                    android:src="@drawable/ic_berita"
                    android:tint="@color/colorWhite"
                    android:background="@null"
                    android:layout_above="@id/tv3"
                    android:scaleType="fitCenter"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MORE"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv4"/>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/btn4"
                    android:src="@drawable/ic_more"
                    android:tint="@color/colorWhite"
                    android:background="@null"
                    android:layout_above="@id/tv4"
                    android:scaleType="fitCenter"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
